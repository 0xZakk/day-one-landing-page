---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<!-- Hero Section -->
	<section class="relative flex items-end h-[50vh] bg-[#3D4A3A]">
		<div class="container mx-auto px-8 pb-16 text-left">
			<h1 class="text-5xl md:text-6xl font-bold mb-4 text-white font-departure">
				Courses
			</h1>
		</div>
	</section>

	<!-- Courses Grid Section -->
	<section class="py-16">
		<div class="container mx-auto px-8">
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-[#1C1C1C] dark:text-[#E5E5E5] font-departure">Available Courses</h2>
			<p class="text-lg mb-12 max-w-3xl text-[#1C1C1C] dark:text-[#E5E5E5]">
				Master AI tools and techniques through our hands-on, project-based learning experiences.
			</p>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<!-- Course Card 1 -->
				<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow cursor-pointer">
					<div class="h-40 bg-[#E9EDE8] dark:bg-[#2D362B] rounded-md flex items-center justify-center mb-6">
						<i data-lucide="code-2" class="text-[#D4A73A] w-10 h-10"></i>
					</div>
					<h3 class="text-xl font-semibold mb-3 text-[#1C1C1C] dark:text-[#E5E5E5] font-departure">Vibe Coding 101</h3>
					<div class="mt-4 flex justify-end">
						<span class="text-[#D4A73A] dark:text-[#D4A73A]">→</span>
					</div>
				</div>
				
				<!-- Course Card 2 -->
				<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow cursor-pointer">
					<div class="h-40 bg-[#E9EDE8] dark:bg-[#2D362B] rounded-md flex items-center justify-center mb-6">
						<i data-lucide="clapperboard" class="text-[#D4A73A] w-10 h-10"></i>
					</div>
					<h3 class="text-xl font-semibold mb-3 text-[#1C1C1C] dark:text-[#E5E5E5] font-departure">Creating Your First Animated Short with Runway</h3>
					<div class="mt-4 flex justify-end">
						<span class="text-[#D4A73A] dark:text-[#D4A73A]">→</span>
					</div>
				</div>
				
				<!-- Course Card 3 -->
				<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow cursor-pointer">
					<div class="h-40 bg-[#E9EDE8] dark:bg-[#2D362B] rounded-md flex items-center justify-center mb-6">
						<i data-lucide="user" class="text-[#D4A73A] w-10 h-10"></i>
					</div>
					<h3 class="text-xl font-semibold mb-3 text-[#1C1C1C] dark:text-[#E5E5E5] font-departure">Developing Characters with ComfyUI</h3>
					<div class="mt-4 flex justify-end">
						<span class="text-[#D4A73A] dark:text-[#D4A73A]">→</span>
					</div>
				</div>
				
				<!-- Course Card 4 -->
				<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow cursor-pointer">
